<div class="container">
  <div class="converter-card">
    <% if @error %>
      <div class="error-message">
        <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M7.5 14C11.0899 14 14 11.0899 14 7.5C14 3.91015 11.0899 1 7.5 1C3.91015 1 1 3.91015 1 7.5C1 11.0899 3.91015 14 7.5 14ZM7.5 15C11.6421 15 15 11.6421 15 7.5C15 3.35786 11.6421 0 7.5 0C3.35786 0 0 3.35786 0 7.5C0 11.6421 3.35786 15 7.5 15Z" fill="currentColor"/>
          <path d="M7 4V8H8V4H7Z" fill="currentColor"/>
          <path d="M7 9V11H8V9H7Z" fill="currentColor"/>
        </svg>
        <%= @error %>
      </div>
    <% else %>
      <div class="rate-badge">
        Current Rate: <span class="rate-value" id="rate"><%= @rate %></span>
      </div>
      
      <div class="converter-form">
        <div class="input-group">
          <label for="usd-amount">Amount (USD)</label>
          <div class="input-wrapper">
            <span class="currency-symbol">$</span>
            <input type="number" id="usd-amount" placeholder="0.00" min="0" step="0.01">
          </div>
        </div>
        
        <div class="result-display">
          <p id="result" class="conversion-result"></p>
        </div>
      </div>
    <% end %>
  </div>
</div> 